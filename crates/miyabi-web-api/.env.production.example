# Miyabi Web API - Production Environment Variables
# Copy to .env.production and fill in actual values

# Database
DATABASE_URL=postgres://user:password@host:5432/miyabi_production

# Server
SERVER_ADDRESS=0.0.0.0:8080
ENVIRONMENT=production

# GitHub OAuth
# Create OAuth App at: https://github.com/settings/developers
GITHUB_CLIENT_ID=Ov23li...
GITHUB_CLIENT_SECRET=your-client-secret-here
GITHUB_CALLBACK_URL=https://miyabi-society.com/api/v1/auth/github/callback

# Frontend URL (for redirects after login)
FRONTEND_URL=https://miyabi-society.com

# JWT Configuration
# Generate with: openssl rand -base64 64
JWT_SECRET=your-secure-random-jwt-secret-here
JWT_EXPIRATION=3600
REFRESH_EXPIRATION=604800

# Optional: Logging
RUST_LOG=miyabi_web_api=info,tower_http=info

# Optional: CORS (if needed)
CORS_ALLOWED_ORIGINS=https://miyabi-society.com
