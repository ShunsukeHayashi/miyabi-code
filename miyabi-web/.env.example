# =====================================================
# Miyabi Web API - Environment Variables Template
# =====================================================

# ---------------------------------
# Database Configuration
# ---------------------------------
DATABASE_URL=postgres://miyabi:miyabi_dev_password@localhost:5432/miyabi_web

# ---------------------------------
# Redis Configuration
# ---------------------------------
REDIS_URL=redis://localhost:6379

# ---------------------------------
# Server Configuration
# ---------------------------------
HOST=0.0.0.0
PORT=8080
RUST_LOG=info
RUST_BACKTRACE=1

# ---------------------------------
# GitHub OAuth (Required for Authentication)
# ---------------------------------
# Create OAuth App: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/callback/github

# GitHub Personal Access Token (for API operations)
GITHUB_TOKEN=ghp_your_personal_access_token_here

# ---------------------------------
# NextAuth.js Configuration
# ---------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate_random_string_here_32chars_minimum

# ---------------------------------
# Miyabi Agent Integration
# ---------------------------------
# Paths to existing Miyabi crates
MIYABI_A2A_PATH=../miyabi-a2a
MIYABI_TYPES_PATH=../miyabi-types
MIYABI_GITHUB_PATH=../miyabi-github
MIYABI_AGENTS_PATH=../miyabi-agents

# ---------------------------------
# Anthropic API (for Agent execution)
# ---------------------------------
ANTHROPIC_API_KEY=sk-ant-api03-your_anthropic_api_key_here

# ---------------------------------
# Logging Configuration
# ---------------------------------
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/miyabi-web-api.log

# ---------------------------------
# CORS Configuration
# ---------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# ---------------------------------
# WebSocket Configuration
# ---------------------------------
WS_PING_INTERVAL_SECS=30
WS_MAX_MESSAGE_SIZE=1048576

# ---------------------------------
# Session Configuration
# ---------------------------------
SESSION_MAX_AGE_SECS=86400
SESSION_SECRET=generate_another_random_string_here_32chars_minimum

# ---------------------------------
# Rate Limiting
# ---------------------------------
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# ---------------------------------
# Development Only
# ---------------------------------
DEV_MODE=true
SKIP_AUTH=false
MOCK_AGENTS=false

# ---------------------------------
# Production Settings (DO NOT USE IN DEVELOPMENT)
# ---------------------------------
# PRODUCTION=true
# DATABASE_URL=postgres://user:pass@production-host:5432/miyabi_web
# REDIS_URL=redis://production-redis:6379
# SENTRY_DSN=https://your_sentry_dsn_here
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_aws_access_key_id
# AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# ---------------------------------
# Next.js Frontend Environment Variables
# ---------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080
NEXT_PUBLIC_GITHUB_CLIENT_ID=your_github_client_id_here

# ---------------------------------
# Optional: LINE Bot Integration (Phase 6)
# ---------------------------------
# LINE_CHANNEL_ID=your_line_channel_id
# LINE_CHANNEL_SECRET=your_line_channel_secret
# LINE_CHANNEL_ACCESS_TOKEN=your_line_access_token

# ---------------------------------
# Optional: Firebase Deployment (DeploymentAgent)
# ---------------------------------
# FIREBASE_PROJECT_ID=your_firebase_project_id
# FIREBASE_SERVICE_ACCOUNT_KEY=path/to/service-account-key.json

# ---------------------------------
# Optional: Vercel Deployment (DeploymentAgent)
# ---------------------------------
# VERCEL_TOKEN=your_vercel_token
# VERCEL_PROJECT_ID=your_vercel_project_id

# ---------------------------------
# Optional: Monitoring & Observability
# ---------------------------------
# PROMETHEUS_METRICS_PORT=9090
# JAEGER_AGENT_HOST=localhost
# JAEGER_AGENT_PORT=6831
