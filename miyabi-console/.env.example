# Miyabi Console - Environment Variables
#
# Copy this file to .env for local development
# Copy this file to .env.production for production builds

# Backend API URL
# Development: http://localhost:8080/api/v1
# Production: https://api.miyabi.example.com/api/v1
# AWS ALB: http://miyabi-alb-dev-1086396144.us-west-2.elb.amazonaws.com/api/v1
VITE_API_URL=http://localhost:8080/api/v1

# WebSocket URL (optional - defaults to same as API URL)
VITE_WS_URL=ws://localhost:8080/ws

# Use mock data (true/false)
# Set to true for offline development without backend
VITE_USE_MOCK=false

# Authentication URLs
VITE_AUTH_URL=http://localhost:8080/api/v1
VITE_AUTH_CALLBACK_URL=http://localhost:3000/auth/callback

# GitHub Client ID (for OAuth)
VITE_GITHUB_CLIENT_ID=Ov23liZZwnVGZaAa809q

# Gemini 3 API Key (Optional - for Adaptive UI features)
# Get your API key from: https://makersuite.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Request timeout (milliseconds)
VITE_API_TIMEOUT=30000

# Enable debug logging
VITE_DEBUG=false
