{
  "name": "miyabi-pitch-deck",
  "version": "1.0.0",
  "description": "Miyabi - 世界初のAGI OS ピッチデック",
  "private": true,
  "scripts": {
    "build": "npm run build:html && npm run build:pdf && npm run build:pptx",
    "build:html": "marp --html --theme themes/miyabi.css miyabi-pitch-deck.md -o output/miyabi-pitch-deck.html",
    "build:pdf": "marp --html --theme themes/miyabi.css --pdf --allow-local-files miyabi-pitch-deck.md -o output/miyabi-pitch-deck.pdf",
    "build:pptx": "marp --html --theme themes/miyabi.css --pptx --allow-local-files miyabi-pitch-deck.md -o output/miyabi-pitch-deck.pptx",
    "build:jony": "npm run build:jony:html && npm run build:jony:pdf && npm run build:jony:pptx",
    "build:jony:html": "marp --html --theme themes/miyabi-jony.css miyabi-pitch-deck.md -o output/miyabi-pitch-deck-jony.html",
    "build:jony:pdf": "marp --html --theme themes/miyabi-jony.css --pdf --allow-local-files miyabi-pitch-deck.md -o output/miyabi-pitch-deck-jony.pdf",
    "build:jony:pptx": "marp --html --theme themes/miyabi-jony.css --pptx --allow-local-files miyabi-pitch-deck.md -o output/miyabi-pitch-deck-jony.pptx",
    "build:accessible": "npm run build:accessible:html && npm run build:accessible:pdf && npm run build:accessible:pptx",
    "build:accessible:html": "marp --html --theme themes/miyabi-accessible.css miyabi-pitch-deck.md -o output/miyabi-pitch-deck-accessible.html",
    "build:accessible:pdf": "marp --html --theme themes/miyabi-accessible.css --pdf --allow-local-files miyabi-pitch-deck.md -o output/miyabi-pitch-deck-accessible.pdf",
    "build:accessible:pptx": "marp --html --theme themes/miyabi-accessible.css --pptx --allow-local-files miyabi-pitch-deck.md -o output/miyabi-pitch-deck-accessible.pptx",
    "build:global": "npm run build:global:html && npm run build:global:pdf && npm run build:global:pptx",
    "build:global:html": "marp --html --theme themes/miyabi-global.css miyabi-pitch-deck.md -o output/miyabi-pitch-deck-global.html",
    "build:global:pdf": "marp --html --theme themes/miyabi-global.css --pdf --allow-local-files miyabi-pitch-deck.md -o output/miyabi-pitch-deck-global.pdf",
    "build:global:pptx": "marp --html --theme themes/miyabi-global.css --pptx --allow-local-files miyabi-pitch-deck.md -o output/miyabi-pitch-deck-global.pptx",
    "build:inevitable": "npm run build:inevitable:html && npm run build:inevitable:pdf && npm run build:inevitable:pptx",
    "build:inevitable:html": "marp --html --theme themes/miyabi-inevitable.css miyabi-pitch-deck.md -o output/miyabi-pitch-deck-inevitable.html",
    "build:inevitable:pdf": "marp --html --theme themes/miyabi-inevitable.css --pdf --allow-local-files miyabi-pitch-deck.md -o output/miyabi-pitch-deck-inevitable.pdf",
    "build:inevitable:pptx": "marp --html --theme themes/miyabi-inevitable.css --pptx --allow-local-files miyabi-pitch-deck.md -o output/miyabi-pitch-deck-inevitable.pptx",
    "build:agi": "npm run build:agi:html && npm run build:agi:pdf && npm run build:agi:pptx",
    "build:agi:html": "marp --html --theme themes/miyabi-agi.css miyabi-pitch-deck-en.md -o output/miyabi-pitch-deck-agi.html",
    "build:agi:pdf": "marp --html --theme themes/miyabi-agi.css --pdf --allow-local-files miyabi-pitch-deck-en.md -o output/miyabi-pitch-deck-agi.pdf",
    "build:agi:pptx": "marp --html --theme themes/miyabi-agi.css --pptx --allow-local-files miyabi-pitch-deck-en.md -o output/miyabi-pitch-deck-agi.pptx",
    "build:portal": "npm run build:portal:html && npm run build:portal:pdf && npm run build:portal:pptx",
    "build:portal:html": "marp --html --theme themes/miyabi-portal.css miyabi-pitch-deck-en.md -o output/miyabi-pitch-deck-portal.html",
    "build:portal:pdf": "marp --html --theme themes/miyabi-portal.css --pdf --allow-local-files miyabi-pitch-deck-en.md -o output/miyabi-pitch-deck-portal.pdf",
    "build:portal:pptx": "marp --html --theme themes/miyabi-portal.css --pptx --allow-local-files miyabi-pitch-deck-en.md -o output/miyabi-pitch-deck-portal.pptx",
    "build:jony-v2": "npm run build:jony-v2:html && npm run build:jony-v2:pdf && npm run build:jony-v2:pptx",
    "build:jony-v2:html": "marp --html --theme themes/miyabi-jony-v2.css miyabi-pitch-deck.md -o output/miyabi-pitch-deck-jony-v2.html",
    "build:jony-v2:pdf": "marp --html --theme themes/miyabi-jony-v2.css --pdf --allow-local-files miyabi-pitch-deck.md -o output/miyabi-pitch-deck-jony-v2.pdf",
    "build:jony-v2:pptx": "marp --html --theme themes/miyabi-jony-v2.css --pptx --allow-local-files miyabi-pitch-deck.md -o output/miyabi-pitch-deck-jony-v2.pptx",
    "build:all": "npm run build && npm run build:jony && npm run build:accessible && npm run build:global && npm run build:inevitable && npm run build:agi && npm run build:portal && npm run build:jony-v2",
    "watch": "marp --watch --html --theme themes/miyabi.css miyabi-pitch-deck.md -o output/miyabi-pitch-deck.html",
    "watch:jony": "marp --watch --html --theme themes/miyabi-jony.css miyabi-pitch-deck.md -o output/miyabi-pitch-deck-jony.html",
    "watch:accessible": "marp --watch --html --theme themes/miyabi-accessible.css miyabi-pitch-deck.md -o output/miyabi-pitch-deck-accessible.html",
    "watch:global": "marp --watch --html --theme themes/miyabi-global.css miyabi-pitch-deck.md -o output/miyabi-pitch-deck-global.html",
    "watch:inevitable": "marp --watch --html --theme themes/miyabi-inevitable.css miyabi-pitch-deck.md -o output/miyabi-pitch-deck-inevitable.html",
    "preview": "marp --html --theme themes/miyabi.css --preview miyabi-pitch-deck.md",
    "preview:jony": "marp --html --theme themes/miyabi-jony.css --preview miyabi-pitch-deck.md",
    "preview:accessible": "marp --html --theme themes/miyabi-accessible.css --preview miyabi-pitch-deck.md",
    "preview:global": "marp --html --theme themes/miyabi-global.css --preview miyabi-pitch-deck.md",
    "preview:inevitable": "marp --html --theme themes/miyabi-inevitable.css --preview miyabi-pitch-deck.md",
    "clean": "rm -rf output && mkdir -p output"
  },
  "keywords": [
    "miyabi",
    "pitch-deck",
    "presentation",
    "agi",
    "ai"
  ],
  "author": "CUSTOMER CLOUD",
  "license": "UNLICENSED",
  "devDependencies": {
    "@marp-team/marp-cli": "^3.4.0"
  }
}
