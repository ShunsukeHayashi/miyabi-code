# Agent Orchestration Framework - 環境変数設定例
# このファイルをコピーして .env として使用してください

# API キー
ANTHROPIC_API_KEY=your-claude-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# ログ設定
LOG_LEVEL=INFO
AUDIT_LOG_PATH=/tmp/miyabi_audit.log

# オーケストレーター設定
MAX_CONCURRENT_TASKS=5
DEFAULT_TASK_TIMEOUT=30

# コンテキスト管理設定
MAX_TOKENS=200000
CONTEXT_CACHE_SIZE=100

# エラーハンドリング設定
MAX_RETRIES=3
CIRCUIT_FAILURE_THRESHOLD=5
CIRCUIT_RECOVERY_TIMEOUT=60

# セキュリティ設定
ENABLE_INPUT_VALIDATION=true
ENABLE_OUTPUT_REDACTION=true
DEFAULT_SECURITY_LEVEL=PUBLIC

# テスト設定
TEST_MODE=false
MOCK_RESPONSE_DELAY=0.1
