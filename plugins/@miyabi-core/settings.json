{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(cargo:*)",
      "Bash(rustc:*)",
      "Bash(npm:*)",
      "Bash(gh:*)",
      "Bash(echo:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(rm:*)",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash(.claude/hooks/*.sh:*)",
      "Task",
      "SlashCommand",
      "Skill",
      "WebFetch(domain:*)",
      "WebSearch"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/shunsuke/Dev/01-miyabi/_core/miyabi-private/.claude/hooks/log-commands.sh \"$PROMPT\""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input' | /Users/shunsuke/Dev/01-miyabi/_core/miyabi-private/.claude/hooks/agent-worktree-pre.sh",
            "timeout": 60000
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/shunsuke/Dev/01-miyabi/_core/miyabi-private/.claude/hooks/auto-format.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/shunsuke/Dev/01-miyabi/_core/miyabi-private/.claude/hooks/stop-speak.sh"
          },
          {
            "type": "command",
            "command": "/Users/shunsuke/Dev/01-miyabi/_core/miyabi-private/.claude/hooks/session-continue.sh"
          }
        ]
      }
    ]
  },
  "enableAllProjectMcpServers": true
}
