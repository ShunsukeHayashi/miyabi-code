# Terraform Variables - Example
# Copy this file to terraform.tfvars and update with actual values
# DO NOT COMMIT terraform.tfvars TO GIT

# ==============================================================================
# AWS Configuration
# ==============================================================================

aws_region     = "us-west-2"
aws_account_id = "112530848482"
environment    = "prod"
project_name   = "miyabi"

# ==============================================================================
# Domain Configuration
# ==============================================================================

domain_name = "miyabi-world.com"

# Optional: API origin domain for /api/* proxy
# api_origin_domain = "api.miyabi-world.com"

# Optional: ACM certificate ARN for HTTPS (must be in us-east-1 for CloudFront)
# acm_certificate_arn = "arn:aws:acm:us-east-1:112530848482:certificate/xxxxx"

# ==============================================================================
# GitHub Credentials (REQUIRED)
# ==============================================================================

# GitHub Personal Access Token with repo permissions
github_token = "ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# GitHub OAuth App credentials (for user authentication)
github_oauth_client_id     = "Iv1.xxxxxxxxxxxxxxxx"
github_oauth_client_secret = "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
github_oauth_callback_url  = "https://api.miyabi-world.com/auth/github/callback"

# ==============================================================================
# Miyabi API Credentials (REQUIRED)
# ==============================================================================

# Miyabi API Access Token (for MCP OAuth)
miyabi_access_token = "your-secure-random-token-here"

# OAuth 2.1 Client Secret (auto-generated if empty)
oauth_client_secret = "your-oauth-client-secret-here"

# ==============================================================================
# Project Configuration
# ==============================================================================

repo_owner = "customer-cloud"
repo_name  = "miyabi-private"
base_url   = "https://api.miyabi-world.com"

# ==============================================================================
# Lambda Configuration (Optional)
# ==============================================================================

# lambda_base_url = ""
# enable_lambda_function_url = false

