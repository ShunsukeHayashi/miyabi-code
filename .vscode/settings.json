{
  // ==========================================
  // ğŸ¯ Miyabi Project Configuration
  // ==========================================
  "miyabi.serverUrl": "http://localhost:3001",
  "miyabi.autoRefresh": true,
  "miyabi.refreshInterval": 60000,
  "miyabi.enableNotifications": true,

  // ==========================================
  // ğŸ¦€ Rust & Cargo Workspace Settings
  // ==========================================

  // Rust Analyzer - 30+ crates workspace optimization
  // Note: server.path is auto-detected (removed macOS-specific path)
  "rust-analyzer.cargo.features": "all",
  "rust-analyzer.check.features": "all",
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.checkOnSave.allTargets": true,
  "rust-analyzer.checkOnSave.extraArgs": [
    "--all-features",
    "--",
    "-W", "clippy::all",
    "-W", "clippy::pedantic",
    "-W", "clippy::nursery"
  ],
  "rust-analyzer.cargo.buildScripts.enable": true,
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.cargo.allTargets": true,
  "rust-analyzer.rustfmt.extraArgs": ["+nightly"],
  "rust-analyzer.lens.enable": true,
  "rust-analyzer.lens.implementations.enable": true,
  "rust-analyzer.lens.references.adt.enable": true,
  "rust-analyzer.lens.references.enumVariant.enable": true,
  "rust-analyzer.lens.references.method.enable": true,
  "rust-analyzer.lens.references.trait.enable": true,
  "rust-analyzer.inlayHints.enable": true,
  "rust-analyzer.inlayHints.chainingHints.enable": true,
  "rust-analyzer.inlayHints.parameterHints.enable": true,
  "rust-analyzer.inlayHints.typeHints.enable": true,
  "rust-analyzer.hover.actions.enable": true,
  "rust-analyzer.hover.actions.implementations.enable": true,
  "rust-analyzer.hover.actions.references.enable": true,
  "rust-analyzer.hover.actions.run.enable": true,
  "rust-analyzer.completion.autoimport.enable": true,
  "rust-analyzer.completion.autoself.enable": true,

  // ==========================================
  // ğŸ“ Files & Folders Exclusion
  // ==========================================

  // File Explorer exclusions
  "files.exclude": {
    "**/.git": false,  // Show .git for worktree management
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.worktrees": true,  // Hide worktree directories
    "**/target": true,      // Hide Rust build artifacts
    "**/node_modules": true,
    "**/.next": true,
    "**/.cache": true,
    "**/*.log": true,
    "**/.miyabi/cache": true,
    "**/.miyabi/temp": true,
    "**/.archive": true     // Hide archived files
  },

  // Search exclusions (more aggressive)
  "search.exclude": {
    "**/.git": false,
    "**/.worktrees": true,
    "**/target": true,
    "**/node_modules": true,
    "**/.next": true,
    "**/dist": true,
    "**/.cache": true,
    "**/build": true,
    "**/*.lock": true,
    "**/.miyabi/cache": true,
    "**/.archive": true,
    "**/docs/diagrams/*.svg": true,  // Exclude generated diagrams
    "**/Cargo.lock": true
  },

  // File watcher exclusions (performance optimization)
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.worktrees/**": true,
    "**/target/**": true,
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/.cache/**": true,
    "**/.miyabi/cache/**": true
  },

  // ==========================================
  // ğŸ¨ Editor Settings - ç¾ã—ãè¦‹ã‚„ã™ã„æœ€é©åŒ–
  // ==========================================

  // ãƒ•ã‚©ãƒ³ãƒˆè¨­å®š - å¯èª­æ€§æœ€é©åŒ–ï¼ˆè¦‹ã‚„ã™ã•é‡è¦–ï¼‰
  "editor.fontFamily": "'SF Mono', 'JetBrains Mono', 'Cascadia Code', Menlo, monospace",
  "editor.fontSize": 18,
  "editor.fontLigatures": true,
  "editor.lineHeight": 32,
  "editor.letterSpacing": 0.8,
  "editor.fontWeight": "450",

  // ã‚¿ãƒ¼ãƒŸãƒŠãƒ«ãƒ•ã‚©ãƒ³ãƒˆ - å¯èª­æ€§æœ€é©åŒ–ï¼ˆè¦‹ã‚„ã™ã•é‡è¦–ï¼‰
  "terminal.integrated.fontFamily": "'SF Mono', 'JetBrains Mono', 'Cascadia Code', monospace",
  "terminal.integrated.fontSize": 17,
  "terminal.integrated.lineHeight": 1.8,
  "terminal.integrated.fontWeight": "450",

  // ãƒ¬ãƒ³ãƒ€ãƒªãƒ³ã‚°æœ€é©åŒ–
  "editor.renderWhitespace": "selection",
  "editor.renderControlCharacters": false,
  "editor.renderLineHighlight": "all",
  "editor.renderLineHighlightOnlyWhenFocus": false,

  // ã‚«ãƒ¼ã‚½ãƒ«ãƒ»ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "workbench.list.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,

  // ä½™ç™½ãƒ»ãƒ‘ãƒ‡ã‚£ãƒ³ã‚°
  "editor.padding.top": 24,
  "editor.padding.bottom": 24,
  "editor.lineNumbers": "on",
  "editor.lineNumbersMinChars": 5,

  // ãƒŸãƒ‹ãƒãƒƒãƒ—
  "editor.minimap.enabled": true,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.maxColumn": 120,
  "editor.minimap.showSlider": "always",
  "editor.minimap.scale": 2,

  // ãƒ–ãƒ©ã‚±ãƒƒãƒˆ
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.guides.indentation": true,
  "editor.guides.highlightActiveIndentation": true,

  // ã‚³ãƒ¡ãƒ³ãƒˆ
  "editor.comments.insertSpace": true,

  // ã‚»ãƒãƒ³ãƒ†ã‚£ãƒƒã‚¯ãƒã‚¤ãƒ©ã‚¤ãƒˆ
  "editor.semanticHighlighting.enabled": true,
  "editor.semanticTokenColorCustomizations": {
    "enabled": true
  },

  // ãã®ä»–ã‚¨ãƒ‡ã‚£ã‚¿è¨­å®š
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.trimAutoWhitespace": true,
  "editor.rulers": [80, 100, 120],
  "editor.wordWrap": "off",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },

  // ==========================================
  // ğŸ“ Language-Specific Formatters
  // ==========================================

  "[rust]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.tabSize": 4,
    "editor.rulers": [100]
  },
  "[toml]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 4
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[yaml]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    }
  },

  // ==========================================
  // ğŸ”§ Git & Version Control
  // ==========================================

  "git.enabled": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.ignoreLimitWarning": true,
  "git.detectSubmodules": true,
  "git.allowForcePush": false,
  "git.branchPrefix": "",
  "git.fetchOnPull": true,
  "git.pruneOnFetch": true,
  "git.showPushSuccessNotification": true,
  "git.untrackedChanges": "separate",

  // ==========================================
  // ğŸ” Search & Terminal
  // ==========================================

  "search.smartCase": true,
  "search.useIgnoreFiles": true,
  "search.useGlobalIgnoreFiles": true,
  "search.followSymlinks": false,
  "search.quickOpen.includeSymbols": true,

  // Terminal settings - cross-platform
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.shell.osx": "/bin/zsh",
  "terminal.integrated.shell.linux": "/bin/bash",

  // ==========================================
  // ğŸ“Š YAML & Schema Settings
  // ==========================================

  "yaml.schemas": {
    ".claude/schemas/orchestra-config.schema.yaml": [
      "orchestra-config.yaml",
      "**/orchestra-config.*.yaml"
    ]
  },
  "yaml.format.enable": true,
  "yaml.validate": true,
  "yaml.completion": true,
  "yaml.hover": true,

  // ==========================================
  // ğŸ”Œ ESLint & Linting
  // ==========================================

  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.format.enable": true,
  "eslint.codeActionsOnSave.mode": "all",
  "eslint.workingDirectories": [
    { "mode": "auto" }
  ],

  // ==========================================
  // ğŸ¯ Workspace & Performance
  // ==========================================

  "files.associations": {
    "*.rs": "rust",
    "*.toml": "toml",
    "CLAUDE.md": "markdown",
    "*.claude.md": "markdown",
    ".env.*": "properties",
    "Cargo.lock": "toml",
    ".cargo/config.toml": "toml",
    "*.drawio": "xml",
    "*.drawio.svg": "xml",
    "*.drawio.png": "png"
  },

  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,

  // Performance settings for large workspace
  "files.maxMemoryForLargeFilesMB": 8192,
  "typescript.tsserver.maxTsServerMemory": 8192,
  "extensions.experimental.affinity": {
    "rust-lang.rust-analyzer": 1
  },

  // ==========================================
  // ğŸªŸ Workbench & UI
  // ==========================================

  "workbench.colorTheme": "Default Dark Modern",
  "workbench.iconTheme": "vs-seti",
  "workbench.tree.indent": 20,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.startupEditor": "none",

  // ==========================================
  // ğŸ”” Notifications & Telemetry
  // ==========================================

  "telemetry.telemetryLevel": "off",
  "update.showReleaseNotes": false,
  "extensions.ignoreRecommendations": false,

  // ==========================================
  // ğŸ› Debug Settings
  // ==========================================

  "debug.console.fontSize": 16,
  "debug.console.fontFamily": "'SF Mono', 'JetBrains Mono', 'Cascadia Code', monospace",
  "debug.internalConsoleOptions": "openOnSessionStart",
  "debug.openDebug": "openOnDebugBreak",
  "debug.showBreakpointsInOverviewRuler": true,
  "debug.toolBarLocation": "docked",

  // ==========================================
  // ğŸ“Š Draw.io Integration
  // ==========================================

  "hediet.vscode-drawio.theme": "dark",
  "hediet.vscode-drawio.customFonts": [
    "SF Mono",
    "JetBrains Mono"
  ],
  "hediet.vscode-drawio.offline": false,
  "hediet.vscode-drawio.enableProposedApi": true,
  "hediet.vscode-drawio.local-storage": "${workspaceFolder}/.vscode/drawio-storage",

  // Draw.io file associations
  "[drawio]": {
    "editor.formatOnSave": false
  }
}
