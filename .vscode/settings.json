{
  "miyabi.serverUrl": "http://localhost:3001",
  "miyabi.autoRefresh": true,
  "miyabi.refreshInterval": 60000,
  "miyabi.enableNotifications": true,

  // フォント設定 - 見やすく最適化
  "editor.fontFamily": "'JetBrains Mono', 'Fira Code', 'SF Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.lineHeight": 22,
  "editor.letterSpacing": 0.5,
  "editor.fontWeight": "400",

  // ターミナルフォント
  "terminal.integrated.fontFamily": "'JetBrains Mono', 'Fira Code', 'SF Mono', Menlo, Monaco, monospace",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 1.4,

  // 見やすさ向上
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "workbench.list.smoothScrolling": true,

  // コメント
  "editor.comments.insertSpace": true,

  // YAML Schema設定
  "yaml.schemas": {
    ".claude/schemas/orchestra-config.schema.yaml": [
      "orchestra-config.yaml",
      "**/orchestra-config.*.yaml"
    ]
  }
}
