{
  "miyabi.serverUrl": "http://localhost:3001",
  "miyabi.autoRefresh": true,
  "miyabi.refreshInterval": 60000,
  "miyabi.enableNotifications": true,

  // フォント設定 - 見やすく最適化
  "editor.fontFamily": "'JetBrains Mono', 'Fira Code', 'SF Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.lineHeight": 22,
  "editor.letterSpacing": 0.5,
  "editor.fontWeight": "400",

  // ターミナルフォント
  "terminal.integrated.fontFamily": "'JetBrains Mono', 'Fira Code', 'SF Mono', Menlo, Monaco, monospace",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 1.4,

  // 見やすさ向上
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "workbench.list.smoothScrolling": true,

  // コメント
  "editor.comments.insertSpace": true,

  // YAML Schema設定
  "yaml.schemas": {
    ".claude/schemas/orchestra-config.schema.yaml": [
      "orchestra-config.yaml",
      "**/orchestra-config.*.yaml"
    ]
  },

  // Rust Analyzer - Lint統合
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.checkOnSave.allTargets": true,
  "rust-analyzer.checkOnSave.extraArgs": ["--all-features"],
  "rust-analyzer.check.features": "all",

  // ESLint統合
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.format.enable": true,
  "eslint.codeActionsOnSave.mode": "all",

  // Auto Format on Save
  "[rust]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  }
}
