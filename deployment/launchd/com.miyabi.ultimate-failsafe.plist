<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.miyabi.ultimate-failsafe</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>/Users/shunsuke/Dev/miyabi-private/scripts/ultimate-failsafe-watchdog.sh</string>
    </array>

    <key>WorkingDirectory</key>
    <string>/Users/shunsuke/Dev/miyabi-private</string>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
        <key>Crashed</key>
        <true/>
    </dict>

    <key>StartInterval</key>
    <integer>30</integer>

    <key>StandardOutPath</key>
    <string>/Users/shunsuke/Dev/miyabi-private/.ai/logs/launchd-failsafe-stdout.log</string>

    <key>StandardErrorPath</key>
    <string>/Users/shunsuke/Dev/miyabi-private/.ai/logs/launchd-failsafe-stderr.log</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/homebrew/bin</string>
    </dict>

    <key>ProcessType</key>
    <string>Background</string>

    <key>Nice</key>
    <integer>-10</integer>

    <key>ThrottleInterval</key>
    <integer>10</integer>
</dict>
</plist>
