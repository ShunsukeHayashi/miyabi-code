{
  "name": "miyabi-tmux-toolkit",
  "version": "2.0.0",
  "description": "Miyabi tmux Toolkit - Gradebook and Conductor Timeline monitoring",
  "type": "module",
  "scripts": {
    "gradebook": "tsx tmux-gradebook.ts",
    "timeline": "tsx cli/conductorTimeline.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "keywords": [
    "miyabi",
    "tmux",
    "gradebook",
    "evaluation",
    "metrics",
    "conductor",
    "timeline",
    "monitoring"
  ],
  "author": "Miyabi Team",
  "license": "MIT",
  "dependencies": {
    "tsx": "^4.7.0",
    "@types/node": "^20.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "conductor-timeline/**/*.ts",
      "!conductor-timeline/**/*.d.ts",
      "!**/__tests__/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
