{
  "name": "miyabi-private",
  "version": "1.0.0",
  "description": "Miyabi - 自律型開発フレームワーク",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "test:mcp": "vitest tests/mcp/",
    "test:mcp:unit": "vitest tests/mcp/miyabi-integration.test.ts",
    "test:mcp:integration": "vitest tests/mcp/integration.test.ts",
    "test:mcp:performance": "vitest tests/mcp/performance.test.ts",
    "test:mcp:ci": "vitest tests/mcp/ --reporter=verbose --run",
    "typecheck": "tsc --noEmit",
    "build": "cargo build --release",
    "build:debug": "cargo build",
    "test:rust": "cargo test",
    "test:rust:lib": "cargo test --lib",
    "test:rust:integration": "cargo test --test integration",
    "lint:rust": "cargo clippy -- -D warnings",
    "fmt:rust": "cargo fmt",
    "mcp:diagnose": "node scripts/test-mcp.sh diagnose",
    "mcp:test": "node scripts/test-mcp.sh all",
    "mcp:monitor": "node scripts/test-mcp.sh monitor"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "miyabi",
    "mcp",
    "automation",
    "ai",
    "development"
  ],
  "author": "Miyabi Team",
  "license": "MIT"
}