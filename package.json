{
  "name": "miyabi-code",
  "version": "0.1.0",
  "description": "AI Coding Agent for Miyabi Agent Society - OpenCode inspired",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "miyabi-code": "dist/cli.js"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsc",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
