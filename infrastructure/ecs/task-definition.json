{
  "family": "miyabi-web-api",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/miyabi-ecs-execution-role",
  "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/miyabi-ecs-task-role",
  "containerDefinitions": [
    {
      "name": "miyabi-web-api",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.ap-northeast-1.amazonaws.com/miyabi-web-api:${IMAGE_TAG}",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 4000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "${ENVIRONMENT}"
        },
        {
          "name": "SERVER_ADDRESS",
          "value": "0.0.0.0:4000"
        },
        {
          "name": "RUST_LOG",
          "value": "info,miyabi_web_api=debug"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:${AWS_ACCOUNT_ID}:secret:miyabi/${ENVIRONMENT}/database-url"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:${AWS_ACCOUNT_ID}:secret:miyabi/${ENVIRONMENT}/jwt-secret"
        },
        {
          "name": "GITHUB_CLIENT_ID",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:${AWS_ACCOUNT_ID}:secret:miyabi/${ENVIRONMENT}/github-client-id"
        },
        {
          "name": "GITHUB_CLIENT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:${AWS_ACCOUNT_ID}:secret:miyabi/${ENVIRONMENT}/github-client-secret"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/miyabi/${ENVIRONMENT}/api",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:4000/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ],
  "tags": [
    {
      "key": "Project",
      "value": "Miyabi"
    },
    {
      "key": "Environment",
      "value": "${ENVIRONMENT}"
    }
  ]
}
