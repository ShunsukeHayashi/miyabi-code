{
  "name": "@miyabi/chatgpt-app",
  "version": "1.0.0",
  "description": "Miyabi ChatGPT App - Apps SDK Integration",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:server && npm run build:web",
    "build:server": "tsc",
    "build:web": "esbuild web/src/index.tsx --bundle --format=esm --outfile=web/dist/widget.js --loader:.tsx=tsx --external:react --external:react-dom",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "serve": "npx serve web/dist -l 4444 --cors"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "express": "^4.18.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "esbuild": "^0.19.8",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2"
  }
}
