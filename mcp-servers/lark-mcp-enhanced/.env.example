# Lark MCP Enhanced - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit the actual .env file to version control!

# ==============================================
# REQUIRED: Lark Bot Credentials
# ==============================================

# Lark Application ID (from Lark Developer Console)
LARK_APP_ID=cli_xxxxxxxxxx

# Lark Application Secret (from Lark Developer Console)
# SECURITY: Keep this secret! Never expose in logs or code.
LARK_APP_SECRET=your_lark_app_secret_here

# Lark Verification Token (for webhook event verification)
LARK_VERIFICATION_TOKEN=your_verification_token_here

# ==============================================
# OPTIONAL: Server Configuration
# ==============================================

# Event server port (default: 3001)
EVENT_SERVER_PORT=3001

# Log level (default: info)
LOG_LEVEL=info
